    <?php 
    echo '<p>Entre com sua nota.</p>'; 
    $nota = $_GET["nota"];

    if ($nota >= 7)
    {
      echo "Passaste na disciplina, parabéns!";
    }
    else if($nota < 7 && $nota >= 5)
    {
      echo "Não fostes bem, está na final!";
    }
    else
    {
      echo "Fostes reprovado até que se prove o contrário!";
    }
    
    
    ?> 
